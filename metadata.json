{
  "name": "puppet-ari",
  "version": "0.1.0",
  "author": "Carlos Cavero",
  "summary": "Roles and profiles for ARI",
  "license": "Apache 2.0",
  "source": "https://github.com/carloscaverobarca/puppet-ari.git",
  "project_page": "https://github.com/carloscaverobarca/puppet-ari",
  "issues_url": "https://github.com/carloscaverobarca/puppet-ari/issues",
  "dependencies": [
    {"name":"puppetlabs/mysql", "version_requirement": "3.11.0" },
    {"name":"puppet/nginx", "version_requirement": "0.6.0" },
    {"name":"biemond/wildfly", "version_requirement": "1.2.8" },
    {"name":"puppetlabs/java", "version_requirement": "1.6.0" },
    {"name":"puppetlabs/tomcat", "version_requirement": "2.0.0" }
  ],
  "data_provider": "hiera",
  "operatingsystem_support": [
    {
      "operatingsystem": "Ubuntu",
      "operatingsystemrelease": [
        "10.04",
        "12.04",
        "14.04",
        "16.04"
      ]
    },    {
      "operatingsystem": "RedHat",
      "operatingsystemrelease": [
        "5",
        "6",
        "7"
      ]
    },
    {
      "operatingsystem": "CentOS",
      "operatingsystemrelease": [
        "5",
        "6",
        "7"
      ]
    }
  ],
  "requirements": [
    {
      "name": "puppet",
      "version_requirement": ">= 3.8.7 < 5.0.0"
    }
  ]
}

